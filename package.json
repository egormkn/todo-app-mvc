{
  "name": "todo-app",
  "version": "0.1.0",
  "description": "ToDo application written in Typescript",
  "author": "Egor Makarenko",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run build",
    "build": "tsc",
    "clean": "rimraf dist",
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node -r dotenv/config dist/main.js",
    "start:optimized": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 -r dotenv/config dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "codecov": "codecov"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.1",
    "@nestjs/core": "^5.4.1",
    "@nestjs/typeorm": "^5.2.2",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "compression": "^1.7.3",
    "dotenv": "^6.1.0",
    "nunjucks": "^3.1.4",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typeorm": "^0.2.9"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.4.1",
    "@types/compression": "0.0.36",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.11",
    "@types/nunjucks": "^3.1.0",
    "@types/supertest": "^2.0.5",
    "codecov": "^3.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "supertest": "^3.1.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2",
    "typescript-tslint-plugin": "^0.1.2"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
